{
    "manifest_version": 2,
    "name": "Filterme",
    "version": "1.0",
    "description": "Extension that filters out unwanted content and trigger words",
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/*",
                "https://www.twitter.com/*",
                "https://www.instagram.com/*",
                "<all_urls>"
            ],
            "js": [
                "content.js"
             ],
            "run_at": "document_end",
            
            "all_frames": true
        }
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

   	"browser_action": {
    	"default_popup": "popup.html"
    },
    "options_ui":{
        "page": "options.html"
    },
    "permissions": [ 
        "activeTab",
        "storage",
        "unlimitedStorage",
        "tabs",
        "https://ajax.googleapis.com/"
     ],
    "incognito": "split"
 }